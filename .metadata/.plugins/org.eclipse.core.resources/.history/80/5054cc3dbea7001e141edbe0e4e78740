package baekjoon;

import java.util.Scanner;

public class B2439 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc=new Scanner(System.in);
		
		int N=sc.nextInt();
		
		for(int j=1;j<=N;j++)
		{
			for(int i=N-2;i>=0;i--)
			{
				System.out.print(" ");
			}
			for(int k=N-3;k>=0;k--)
			{
				System.out.print("*");
			}
			System.out.println("*");
		}
	}

}
