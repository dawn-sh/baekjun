package baekjoon;

import java.util.Scanner;

public class B10950 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc=new Scanner(System.in);
		
		int t=sc.nextInt();
		int a=0;
		int b=0;
		
		
		for(int i=0;i<t;i++)
		{
			a=sc.nextInt();
			b=sc.nextInt();
		}
		
		for(int i=0;i<t;i++)
		{
			System.out.println(a+b);
		}
		
			
	}

}
